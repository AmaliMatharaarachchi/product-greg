<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <h4>Overview</h4>
        </thead>
        <tbody>
            <tr>
                <td>Policy Name</td>
                <td>
                    {{policyname}}
                </td>
            </tr>
            <tr>
                <td>Policy Version</td>
                <td>
                    {{version}}
                </td>
            </tr>
        </tbody>
    </table>
    <table class="table table-striped table-hover">
        <thead>
        <h4>Lifecycle</h4>
        </thead>
        <tbody>
        <tr>
            <th>Name :</th>
            <td>{{lifecycle}}</td>
        </tr>
        <tr>
            <th>State :</th>
            <td>{{lifecycleState}}</td>
        </tr>
        </tbody>
    </table>
    <table class="table table-striped table-hover">
        <thead>
        <h4>Associations</h4>
        </thead>
        <tbody>
        <tr>
            <th>Dependencies :</th>
            {{#each dependencies}}
            <tr>
            <td><a href="../../../asts/{{this.associationType}}/details/{{this.associationUUID}}">{{this.associationName}}</td>
            </tr>
            {{/each}}
        </tr>
        <tr>
            <th>Dependents :</th>
            {{#each dependents}}
            <tr>
            <td><a href="../../../asts/{{this.associationType}}/details/{{this.associationUUID}}">{{this.associationName}}</td>
            </tr>
            {{/each}}
        </tr>
        </tbody>
    </table>
    <div id='policy-viewer'>
        <legend><h4>Policy</h4></legend>
        {{#if policyContent}}
            <textarea id="policycontent" name="policycontent">{{../policyContent}}</textarea>
        {{else}}
            <p>No Policy Content To Display</p>
        {{/if}}
    </div>

</div>