<div class="table-responsive">
    <div class="col-lg-12">
        <div id='wadl-viewer'>
            <legend><h4>{{t "WADL"}}</h4></legend>
            <div class="col-lg-12 table table-striped table-hover divrow">
                <div class="col-lg-2">
                    {{t "Raw Content :"}}
                </div>
                <div class="col-lg-10">
                    <a href="../../../../governance/wadls/{{id}}/content">{{t "Link"}}</a>
                </div>
            </div>
            {{#if wadlContent}}
                <textarea id="wadlcontent" name="wadlcontent" style="width:100%">{{../wadlContent}}</textarea>
            {{else}}
                <p>{{t "No WADL Content To Display"}}</p>
            {{/if}}
        </div>
    </div>
</div>