<div class="table-responsive">
    <div class="col-lg-12">
        <div id='schema-viewer'>
            <legend><h4>{{t "Schema"}}</h4></legend>
            <div class="col-lg-2">
                {{t "Raw Content :"}}
            </div>
            <div class="col-lg-10">
                <a href="../../../../governance/schemas/{{id}}/content">{{t "Link"}}</a>
            </div>
            {{#if schemaContent}}
                <textarea id="schemacontent" name="schemacontent" style="width:100%" >{{../schemaContent}}</textarea>
            {{else}}
                <p>{{t "No Schema Content To Display"}}</p>
            {{/if}}
        </div>
    </div>
</div>