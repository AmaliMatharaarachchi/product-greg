<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <h4>Overview</h4>
        </thead>
        <tbody>
            <tr>
                <td>Swagger Name</td>
                <td>
                    {{name}}
                </td>
            </tr>
            <tr>
                <td>Version</td>
                <td>
                    {{version}}
                </td>
            </tr>
        </tbody>
    </table>
    <table class="table table-striped table-hover">
        <thead>
        <h4>Associations</h4>
        </thead>
        <tbody>
        <tr>
            <th>Dependencies :</th>
            {{#each dependencies}}
            <tr>
            <td><a href="../../../asts/{{this.associationType}}/details/{{this.associationUUID}}">{{this.associationName}}</td>
            </tr>
            {{/each}}
        </tr>
        <tr>
            <th>Dependents :</th>
            {{#each dependents}}
            <tr>
            <td><a href="../../../asts/{{this.associationType}}/details/{{this.associationUUID}}">{{this.associationName}}</td>
            </tr>
            {{/each}}
        </tr>
        
        </tbody>
    </table>
    <div id='swagger-viewer'>
        <legend><h4>Swagger</h4></legend>
        {{#if content}}
            <textarea id="swaggercontent" name="swaggercontent">{{../content}}</textarea>
        {{else}}
            <p>No Swagger Content To Display</p>
        {{/if}}
    </div>

</div>