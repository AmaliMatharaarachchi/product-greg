<div class="row">
    <div class="span3">
           <h4><i class="icon-time"></i>{{t "Recently Added"}}</h4>
        {{#slice recentAssets count="20" size="20"}}

            {{#each .}}
                <div class="row-fluid recently-added">
                        <div class="span3">
                            <a href="{{url "/asts"}}/{{type}}/details/{{id}}"><img src='{{url ""}}/extensions/assets/wsdl/themes/store/imgs/thumbnail.png'></a>
                        </div>
                        <div class="span9">
                            <strong><a href="{{url "/asts"}}/{{type}}/details/{{id}}">{{wsdlname}}</a></strong>
                            <small>by <a href="#">{{authorUserName}}</a></small>
                            <span class="star-rating">
                            	<div class="asset-rating">
	                            	<!--<div class="asset-rating-{{../rating}}star"></div>-->
	                            	<div style="width:{{ratingPx}}px"></div>
                            	</div>
                            </span>
                        </div>
                </div>
            {{/each}}
            <hr/>
        {{/slice}}
    </div>
</div>
