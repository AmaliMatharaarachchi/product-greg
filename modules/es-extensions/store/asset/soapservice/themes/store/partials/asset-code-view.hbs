<div class="table-responsive">
    <div class="col-lg-12">
            <legend><h4>{{t "WSDL"}}</h4></legend>
            {{#if wsdl_uuid}}
            <div class="col-lg-12 table table-striped table-hover divrow">
                <div class="col-lg-2">
                    {{t "Raw Content :"}}
                </div>
            </div>
            {{/if}}
            <div id='wsdl-viewer'>
                {{#if wsdlContent}}
                    <textarea id="wsdlcontent" name="wsdlcontent" style="width:100%">{{../wsdlContent}}</textarea>
                {{else}}
                    <p>{{t "No WSDL Content To Display"}}</p>
                {{/if}}
            </div>
    </div>
</div>