<div class="table-responsive">
    <div class="col-lg-12">
            <legend><h4>WSDL</h4></legend>
            {{#if wsdl_uuid}}
            <div class="col-lg-12 table table-striped table-hover divrow">
                <div class="col-lg-2">
                    Raw Content :
                </div>
                <div class="col-lg-10">
                    <a href="../../../../governance/wsdls/{{wsdl_uuid}}/content">Link</a>
                </div>
            </div>
            {{/if}}
            <div id='wsdl-viewer'>
                {{#if wsdlContent}}
                    <textarea id="wsdlcontent" name="wsdlcontent" style="width:100%">{{../wsdlContent}}</textarea>
                {{else}}
                    <p>No WSDL Content To Display</p>
                {{/if}}
            </div>
    </div>
</div>