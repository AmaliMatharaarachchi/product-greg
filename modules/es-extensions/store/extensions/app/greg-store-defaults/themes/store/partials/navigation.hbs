<!-- secondary header - app bar -->
<div id="nav" class="wr-app-bar row">
    <div class="wr-action-container col-md-8">
        <div class="wr-asset-type-switcher">
            <a id="popoverExampleTwo" data-placement="bottom" class="ctrl-asset-type-switcher pull-left" href="#" data-original-title="" title="">
                <span class="btn-asset"></span>
            </a>

            <div class="popover menu fade bottom in">
                <div class="arrow"></div>
                <div class="popover-content">
                    {{#with navigationBar}}
                        {{#each types}}
                            <a class="ast-type-item {{#if selected}} selected {{/if}}" href="{{tenantedUrl ""}}{{this.listingUrl}}">
                                {{#if value.icon}}
                                <div style="background-image:url({{url ""}}{{ui.icon}})"></div>
                                {{else}}
                                <i class="{{ui.icon}}"></i>
                                {{/if}}
                                {{singularLabel}}
                            </a>
                        {{/each}}
                    {{/with}}
                </div>
            </div>
        </div><!-- menu Button -->
        <div class="search">
            {{#with searchBar}}
                {{>search .}}
            {{/with}}
            <a href="{{url ""}}/pages/advanced-search" class="pull-left advance-search-btn">Advanced Search</a>
        </div><!--search--->
    </div>
    <div class="top-menu-right-custom pull-right">
        {{#hasAppPermission . key="APP_MYITEMS" username=cuser.username tenantId=cuser.tenantId}}
            <a href="{{url "/pages/my-items"}}" class="bookmark-link" style="display:none;">
                My bookmarks <i class="fw fw-store fw-inverse fw-lg"></i>
            </a>
        {{/hasAppPermission}}
        {{#if isSidebarEnabled}}
                <a href="javascript:void(0)" onclick="toggleSidePanel('notifications',this)"  class="cu-btn wr-side-panel-toggle-btn wr-notification-toggle-btn">
                        <span class="fw-stack-md">
                            <i class="fw fw-bell fw-stack-1-5x"></i>
                        </span>
                    <span class="wr-notification-bubble" id="notificationCount" >{{notificationsCount.count}}</span>
                </a>
                {{#hasAppPermission . key="GREG_COMMUNITY_FEATURES" username=cuser.username tenantId=cuser.tenantId}}
                <a href="javascript:void(0)" onclick="toggleSidePanel('options',this)" class="cu-btn wr-side-panel-toggle-btn">
                        <span class="fw-stack-md">
                            <i class="fw fw-left-arrow fw-stack-1-5x"></i>
                        </span>
                    Options
                </a>
                {{/hasAppPermission}}
        {{/if}}
    </div>
</div>
<!-- secondary header - app bar -->

<!--Need to delete these sections down-->
<div  style="display: none" id="content-asset-types">
    <div>
        {{#with navigationBar}}
            {{#each types}}
                <a class="ast-type-item" target="_self" href="{{tenantedUrl ""}}{{this.listingUrl}}">
                    {{#if value.icon}}
                        <div style="background-image:url({{url ""}}{{ui.icon}})">
                        </div>
                    {{else}}
                        <i class="{{ui.icon}}"></i>
                    {{/if}}
                    {{singularLabel}}
                </a>
            {{/each}}
        {{/with}}
    </div>
</div>
<div class="row" style="display:none;">
  {{> action-bar .}}
</div>